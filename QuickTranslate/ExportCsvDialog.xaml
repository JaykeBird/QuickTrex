<Window x:Class="QuickTranslate.ExportCsvDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickTranslate"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="ExportCsvDialog" Height="180" Width="315">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" Text="Export translations to CSV" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox" Content="Include column headers" HorizontalAlignment="Left" Margin="20,61,0,0" VerticalAlignment="Top" />
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Height="24" Click="btnOk_Click" />
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Height="24" Click="btnCancel_Click" />

    </Grid>
</Window>
